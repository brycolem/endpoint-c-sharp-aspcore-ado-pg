{
	"name": "Alpine .NET",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--privileged"
	],
	"customizations": {
		"vscode": {
			"settings": {
				"editor.formatOnSave": true,
				"editor.tabSize": 2,
				"remote.SSH.serverInstallPath": "/home/vscode/.vscode-server"
			},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"ms-vscode.cpptools"
			]
		}
	},
	"remoteUser": "vscode"
}